{
  "name": "express-kafka-demo",
  "version": "1.0.0",
  "description": "Simple Express.js backend with Apache Kafka integration",
  "main": "src/app.js",
  "scripts": {
  "start": "nodemon src/app.js",
  "dev": "nodemon src/app.js",
    "consumer": "node src/kafka/consumer.js",
    "producer": "node src/kafka/producer.js",
    "test": "node test-producer.js",
    "check-events": "node check-events.js",
    "setup": "./setup.sh",
    "kafka:start": "./kafka-helper.sh start",
